<body class="">

<div class="container" style="width: 650px;">
  <div class="row">
	<div class="col-lg-12">
		<h1 class="text-center">Promotion steps</h1>
		<hr/>
		<br/>
	</div>
	<!--<div id="loader">
	  <p class="text-center">Loading...</p>
	</div>-->
	<div id="content" class="text-center">
	  <p>
	    DAI user available balance <span class="dai-user-balance"></span>
		<br/>
		My DAI allowance for deposit <span class="dai-allowance"></span>
		<br/>
		DAI approve to deposit <input type="text" class="dai-approve-to-deposit"></input>
		<br/><br/>
		<button type="submit" onclick="App2.approveDaiDeposit();" class="btn btn-primary btn-lg">DAI approve deposit</button>
	  </p>
	  <br/>
	  <p>
		My DAI deposit <span class="dai-deposit-balance"></span>
		<br/>
		DAI to deposit <input type="text" class="dai-to-deposit"></input>
		<br/><br/>
	    <button type="submit" onclick="App2.depositDai();" class="btn btn-primary btn-lg">DAI deposit</button>
		<br/><br/>
		DAI to withdraw <input type="text" class="dai-to-withdraw"></input>
		<br/><br/>
	    <button type="submit" onclick="App2.withdrawDai();" class="btn btn-primary btn-lg">DAI withdraw</button>
	  </p>
	  <br/>
	  <p>
		ETH promo available <span class="eth-promo-available"></span>
		<br/>
		Buy ETH <input type="text" class="eth-promo-to-buy"></input>
		<br/><br/>
	    <button type="submit" onclick="App2.buyEthPromo();" class="btn btn-primary btn-lg">Buy ETH at discount</button>
	  </p>
	  <br>
	  <hr>
	  <p id="accountAddress"></p>
	  <br>
	  <p class="last-tx-info" hidden>View last transaction on Etherscan: <a class="last-tx-link" href="" target="_blank"></a></p>
	  <br>
	</div>
  </div>
</div>
<!-- ./wrapper -->
  	
